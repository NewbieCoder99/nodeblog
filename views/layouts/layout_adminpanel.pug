doctype html
html(lang="en")
	head
		title #{title}
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
		meta(name='description', content='I Love NodeJS')
		meta(name='author', content='Qudrat Nurfajar Yasin Sutisna')
		include ../includes/css.pug
		block styles
	body
		div#header
			include ../includes/dashboards/navbar.pug
		div.wrapper
			include ../includes/dashboards/sidebar.pug
			div.content
				nav(aria-label="breadcrumb",style="border-bottom:1px solid #fff;")
					block breadcrumb
				div.container-fluid
					div.v-pb-20
					block content

		include ../includes/js.pug
		include ../includes/modal

		script.

			/*
			* Vex Options
			*/
			vex.defaultOptions.className = 'vex-theme-default';

			/*
			* Overide Modal Type
			*/
			function modalType(param = 'modal-xs') {
				jQuery('.modal-dialog').attr('class','modal-dialog ' + param);
			}

			/*
			* Overide Modal Content With Loader
			*/
			function modalLoading() {
				jQuery('#modal-body').html(`
					<div class="row">
						<div class="col-lg-12">
							<center>
								<img src="/assets/img/loading.gif" style="width:20%;"><br>
							</center>
						</div>
					</div>
				`);
			}

			/*
			* Overide Modal Title
			*/
			function modalTitle(param) {
				jQuery('.modal-title').html(param);
			}

			/*
			* Overide Modal Content
			*/
			function modalContent(param) {
				jQuery('#modal-body').html(param);
			}

			/*
			* Show Modal
			*/
			function showModal() {
				jQuery('#customModal').modal({
					show : true,
					backdrop : 'static',
					keyboard : false,
					focus : true
				});
			}

			/*
			* Hide Modal
			*/
			function hideModal() {
				jQuery('.closeModal').trigger('click');
			}

			/*
			* API URL Variable
			*/
			var ApiURL = "#{process.env.API_URL}";

			/*
			* Logout Function
			*/
			function logout() {
				jQuery.get(ApiURL + '/logout', function(response) {
					if(response.error == 0) {
						location.replace('/login');
					}
				});
			}

		block scripts
