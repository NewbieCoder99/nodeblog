doctype html
html(lang="en")
	head

		title #{title}
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
		meta(name='description', content='I Love NodeJS')
		meta(name='author', content='Qudrat Nurfajar Yasin Sutisna')

		link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700|Roboto:300,400,500,600,700')
		link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
		link(rel='stylesheet', href='/assets/css/main.css')
		link(rel='stylesheet', href='https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css')
		link(rel='stylesheet', href='/assets/css/dashboard-custom.css')
		script(type="text/javascript", src="/assets/vendors/fontawesome-5.9.0/js/all.js")
		link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/vex-js/4.1.0/css/vex-theme-default.min.css')
		link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/vex-js/4.1.0/css/vex.min.css')
		link(href="/assets/css/owl.carousel.min.css", rel="stylesheet")
		link(href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css", rel="stylesheet")

		block styles
	body
		.wrapper

			include ../includes/dashboards/sidebar

			#customContent

				include ../includes/dashboards/navbar

				block breadcrumb
				block content

		include ../includes/modal
		include ../includes/js

		script.

			jQuery("#sidebarCollapse").on("click", function() {
				jQuery("#sidebar").toggleClass("active");
				jQuery(this).toggleClass("active");
			});

			/*
			* Vex Options
			*/
			vex.defaultOptions.className = 'vex-theme-default';

			/*
			* API URL Variable
			*/
			var ApiURL = "#{process.env.API_URL}";

			/*
			* Dashboard Url
			*/
			var dashboardURL = "#{process.env.APP_URL}/dashboard";

			/*
			* Show Alert From Toast
			*/
			function showToastAlert(params) {
				if(!params.error) {
					toastr.success(params.message)
				} else {
					toastr.error(params.message)
				}
			}

			/*
			* Overide Modal Type
			*/
			function modalType(param = 'modal-xs') {
				jQuery('.modal-dialog').attr('class','modal-dialog ' + param);
			}

			/*
			* Overide Modal Content With Loader
			*/
			function modalLoading() {
				jQuery('#modal-body').html(`
					<div class="row">
						<div class="col-lg-12">
							<center>
								<img src="/assets/img/loading.gif" style="width:20%;"><br>
							</center>
						</div>
					</div>
				`);
			}

			/*
			* Overide Modal Title
			*/
			function modalTitle(param) {
				jQuery('.modal-title').html(param);
			}

			/*
			* Overide Modal Content
			*/
			function modalContent(param) {
				jQuery('#modal-body').html(param);
			}

			/*
			* Show Modal
			*/
			function showModal() {
				jQuery('#customModal').modal({
					show : true,
					backdrop : 'static',
					keyboard : false,
					focus : true
				});
			}

			/*
			* Hide Modal
			*/
			function hideModal() {
				jQuery('.closeModal').trigger('click');
			}

			/*
			* Logout Function
			*/
			function logout() {
				jQuery.get(ApiURL + '/logout', function(response) {
					window.location.replace('/login');
				});
			}

		block scripts
